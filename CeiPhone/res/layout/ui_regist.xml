<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/welcome"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/regist_1" />

    <ImageView
        android:id="@id/botton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/regist_3" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/botton"
        android:layout_below="@id/top" >

        <RelativeLayout
            android:id="@id/regist_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/regist_2_1"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <ImageView
                android:id="@id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40.0dip"
                android:background="@drawable/regist_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25.0dip"
                android:background="@drawable/login_cei" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/regist_botton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/regist_2_3" >

            <Button
                android:id="@id/ui_regist_login"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/regist_button" />

            <Button
                android:id="@id/ui_back"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/ui_regist_login"
                android:layout_below="@id/ui_regist_login"
                android:layout_marginTop="30.0dip"
                android:background="@drawable/login_back" />

            <Button
                android:id="@id/ui_regist_regist"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignRight="@id/ui_regist_login"
                android:layout_below="@id/ui_regist_login"
                android:layout_marginTop="30.0dip"
                android:background="@drawable/regist_login" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/regist_botton"
            android:layout_below="@id/regist_top"
            android:background="@drawable/regist_2_2" >

            <LinearLayout
                android:id="@id/ui_regist_etparent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip" >

                    <EditText
                        android:id="@id/regist_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/login_username_text"
                        android:hint="用户名"
                        android:maxWidth="280.0dip"
                        android:paddingLeft="30.0dip"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@id/regist_1"
                        android:background="@drawable/grzx_star" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip" >

                    <EditText
                        android:id="@id/regist_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/login_password_text"
                        android:hint="密码"
                        android:maxWidth="280.0dip"
                        android:paddingLeft="30.0dip"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@id/regist_2"
                        android:background="@drawable/grzx_star" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip" >

                    <EditText
                        android:id="@id/regist_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/login_password_text_1"
                        android:hint="确认密码"
                        android:maxWidth="280.0dip"
                        android:paddingLeft="30.0dip"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@id/regist_3"
                        android:background="@drawable/grzx_star" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip" >

                    <EditText
                        android:id="@id/regist_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/login_nicheng_text"
                        android:hint="昵称"
                        android:maxWidth="280.0dip"
                        android:paddingLeft="30.0dip"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@id/regist_4"
                        android:background="@drawable/grzx_star" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip" >

                    <EditText
                        android:id="@id/regist_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/getpassword_edittext"
                        android:hint="电子邮件"
                        android:maxWidth="280.0dip"
                        android:paddingLeft="30.0dip"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@id/regist_5"
                        android:background="@drawable/grzx_star" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10.0dip"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:maxWidth="280.0dip"
                        android:text="性别："
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />

                    <RadioGroup
                        android:id="@id/lines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@id/textview666"
                        android:checkedButton="@id/wlan"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@id/economic_register_register_query_accurate_query_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:checked="true"
                            android:text="男"
                            android:textColor="#ff000000"
                            android:textSize="15.0sp" />

                        <RadioButton
                            android:id="@id/economic_register_register_qussssery_vague_query_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="女"
                            android:textColor="#ff000000"
                            android:textSize="15.0sp" />
                    </RadioGroup>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip" >

                    <EditText
                        android:id="@id/regist_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/login_zjlx_text"
                        android:hint="证件类型"
                        android:maxWidth="280.0dip"
                        android:paddingLeft="30.0dip"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/regist_6"
                        android:background="@drawable/grzx_star"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip" >

                    <EditText
                        android:id="@id/regist_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/login_zjhm_text"
                        android:hint="证件号码"
                        android:maxWidth="280.0dip"
                        android:paddingLeft="30.0dip"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/regist_7"
                        android:background="@drawable/grzx_star"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20.0dip"
                    android:layout_marginTop="10.0dip" >

                    <EditText
                        android:id="@id/regist_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/login_phone_text"
                        android:hint="电话"
                        android:maxWidth="280.0dip"
                        android:paddingLeft="30.0dip"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/regist_8"
                        android:background="@drawable/grzx_star"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>